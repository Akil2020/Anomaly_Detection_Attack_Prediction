      "targets": [
        {
          "refId": "C",
          "rawSql": "SELECT * FROM predictions_staging WHERE NULLIF(\"anomaly_score\", '')::double precision IS NOT NULL AND NULLIF(\"anomaly_score\", '')::double precision > 0.7 ORDER BY \"ts\" DESC LIMIT 200;",
