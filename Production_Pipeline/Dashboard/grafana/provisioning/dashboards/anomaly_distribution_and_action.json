        "type": "postgres",
        "uid": null,
        "name": "PostgresInfra"
      },
      "targets": [
        {
          "refId": "B",
          "rawSql": "SELECT \"Action\" as metric, avg(NULLIF(\"anomaly_score\", '')::double precision) as value FROM predictions_staging WHERE NULLIF(\"anomaly_score\", '')::double precision IS NOT NULL AND \"Action\" IS NOT NULL GROUP BY 1 ORDER BY value DESC LIMIT 20;",
